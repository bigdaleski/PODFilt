//Show Sockets
ItemDisplay[SOCK>0]: %NAME% %TAN%[%WHITE%%SOCKETS%%TAN%]%CONTINUE%


//Show me that item is ethereal
ItemDisplay[ETH]:[%WHITE%eth%GRAY%]% %NAME%

